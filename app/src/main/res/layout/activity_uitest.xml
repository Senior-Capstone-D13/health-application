<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UITestActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/lightdark"
                android:layout_width="110dp"
                android:layout_height="83dp"
                android:layout_weight="1"
                android:text="Mode" />

            <Button
                android:id="@+id/theme1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Theme 1" />

            <Button
                android:id="@+id/theme2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Theme 2" />

            <Button
                android:id="@+id/theme3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Theme 3" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textNormalBG"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:text="Sample Text on a normal background"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textAltBG"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:background="?colorPrimary"
                    android:text="Sample Text on an alternate background"
                    android:textColor="?colorOnPrimary"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonNormal"
                        android:layout_width="201dp"
                        android:layout_height="wrap_content"
                        android:text="Regular button" />

                    <Button
                        android:id="@+id/buttonAlternate"
                        android:layout_width="157dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="?colorOnPrimary"
                        android:text="Alternate button"
                        android:textColor="?colorPrimary"
                        app:strokeColor="?colorPrimary"
                        app:strokeWidth="3dp" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="42dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>