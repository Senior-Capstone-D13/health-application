<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengesActivityFragmentSend"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-45dp">


    <TextView
        android:id="@+id/userName"
        android:layout_width="409dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:text="userName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receivedChallengeInfo"
        android:layout_width="411dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:text="received Challenge Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="72dp"
        android:layout_marginTop="56dp"
        android:text="Accept"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receivedChallenges" />

    <TextView
        android:id="@+id/currentChallengeText"
        android:layout_width="383dp"
        android:layout_height="55dp"
        android:layout_marginTop="172dp"
        android:text="Current Challenges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receivedChallenges" />

    <TextView
        android:id="@+id/currentChallengeInfo"
        android:layout_width="387dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:text="Current Challenge Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentChallengeText" />

    <Button
        android:id="@+id/rejectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="56dp"
        android:text="Reject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/acceptButton"
        app:layout_constraintTop_toBottomOf="@+id/receivedChallenges" />

    <TextView
        android:id="@+id/receivedChallenges"
        android:layout_width="411dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:text="Received Challenges"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receivedChallengeInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>


