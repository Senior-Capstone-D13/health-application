<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenActivity">


    <ImageView
        android:id="@+id/characterImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/body1"/>

    <Button
        android:id="@+id/popupUserInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Settings"
        app:layout_constraintEnd_toStartOf="@+id/goChallengeMain"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dailyProgress" />

    <Button
        android:id="@+id/goChallengeMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:text="Challenges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dailyProgress" />

    <Button
        android:id="@+id/goCountCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:text="Count Calories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popupUserInformation" />

    <Button
        android:id="@+id/goSelectWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="Select Workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goCountCalories"
        app:layout_constraintVertical_bias="0.342" />

    <Button
        android:id="@+id/goTrackLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Track Location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.651"
        app:layout_constraintStart_toEndOf="@+id/goCountCalories"
        app:layout_constraintTop_toBottomOf="@+id/goChallengeMain" />

    <ProgressBar
        android:id="@+id/dailyProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="243dp"
        android:layout_height="14dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterImage" />

    <Button
        android:id="@+id/accessoryLeft"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginBottom="32dp"
        android:text="\u2190"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bodyLeft"
        app:layout_constraintEnd_toStartOf="@+id/characterImage"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bodyLeft"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="128dp"
        android:text="\u2190"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/characterImage"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/accessoryRight"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginBottom="32dp"
        android:text="\u2192"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bodyRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/characterImage" />

    <Button
        android:id="@+id/bodyRight"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:text="\u2192"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/characterImage"
        app:layout_constraintTop_toBottomOf="@+id/accessoryLeft" />

</androidx.constraintlayout.widget.ConstraintLayout>