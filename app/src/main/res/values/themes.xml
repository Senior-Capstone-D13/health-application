<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark_2</item>
        <item name="colorOnPrimary">@color/light_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_1</item>
        <item name="colorSecondaryVariant">@color/dark_2</item>
        <item name="colorOnSecondary">@color/light_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_dark</item>
        <!-- Customize your theme here. -->
        <item name = "android:windowBackground">@color/light_1</item>
    </style>

    <style name="Theme.HealthApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HealthApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HealthApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>